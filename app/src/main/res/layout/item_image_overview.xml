<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    tools:background="@color/colorAccent">

    <LinearLayout
        android:id="@+id/ll_overview_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_overview_item_image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/ic_image_placeholder" />

        <LinearLayout
            android:id="@+id/ll_overview_item_banner"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/trans_black"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/tv_overview_item_banner_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Smith"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse" />

            <TextView
                android:id="@+id/tv_overview_item_banner_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New York, NY"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>